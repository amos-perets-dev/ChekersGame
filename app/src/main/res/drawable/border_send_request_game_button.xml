<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <gradient
                        android:startColor="#000000"
                        android:centerColor="#838383"
                        android:endColor="#C4C4C4"
                        android:angle="270"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gÃ¶lge
              android:right="5px" to make it round-->
            <item
                android:bottom="2.5dp">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#333"
                        android:endColor="#333"
                        android:angle="270" />
                    <corners
                        android:radius="30dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#00FFFFFF"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="2.5dp">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#505050"
                        android:endColor="#333"
                        android:angle="270" />
                    <corners
                        android:radius="30dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>
