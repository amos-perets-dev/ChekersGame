<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:left="-2dip">
        <shape
            android:shape="rectangle">
            <corners
                android:topRightRadius="15sp"
                android:bottomRightRadius="15sp"/>
