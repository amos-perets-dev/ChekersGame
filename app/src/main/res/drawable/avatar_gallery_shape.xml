<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#808080"
                        android:endColor="#CACACA"
                        android:angle="270"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gÃ¶lge
              android:right="5dp" to make it round-->
            <item
                android:bottom="4dp"
                android:right="4dp"
                android:left="4dp">
                <shape android:shape="oval">
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#505050"
                        android:endColor="#333"
                        android:angle="270" />
                    <corners
                        android:radius="30dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#00FFFFFF"/>
                    <corners android:radius="30dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item
                android:bottom="1dp"
                android:right="1dp"
                android:left="1dp">
                <shape android:shape="oval">
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#505050"
                        android:endColor="#333"
                        android:angle="270" />
                    <corners
                        android:radius="30dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
