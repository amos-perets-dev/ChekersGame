<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_language"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:textColor="@color/color_white"
        android:typeface="serif"
        app:layout_constraintWidth_percent="0.6"
        app:autoSizeMaxTextSize="@dimen/activity_home_page_menu_settings_language_text_size_max"
        app:autoSizeMinTextSize="@dimen/activity_home_page_menu_settings_language_text_size_min"
        app:autoSizeTextType="uniform"
        tools:text="test" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flag_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/text_view_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:elevation="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>