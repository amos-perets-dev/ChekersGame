<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">


    <com.example.chekersgamepro.views.SpinnerView
        android:id="@+id/spinner_languages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:prompt="@string/activity_home_page_menu_settings_multi_languages_spinner_hint_text"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_languages"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/color_light_gray"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_sound"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/activity_home_page_menu_settings_sound_text"
        android:textColor="@color/color_black"
        android:typeface="serif"
        app:autoSizeMaxTextSize="@dimen/activity_home_page_menu_settings_sound_text_size_max"
        app:autoSizeMinTextSize="@dimen/activity_home_page_menu_settings_sound_text_size_min"
        app:autoSizeTextType="uniform"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_languages"
        app:layout_constraintWidth_percent="0.7" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_compat_on_off_sound"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="serif"
        android:textSize="10dp"
        android:paddingEnd="15dp"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_sound"
        app:layout_constraintStart_toEndOf="@+id/text_view_sound"
        app:layout_constraintTop_toTopOf="@+id/text_view_sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:showText="true"
        android:textOn="@string/activity_home_page_menu_settings_sound_picker_on_text"
        android:textOff="@string/activity_home_page_menu_settings_sound_picker_off_text"
        app:track="@drawable/custom_track" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/switch_compat_on_off_sound"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/color_light_gray"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/activity_home_page_menu_settings_chat_text"
        android:textColor="@color/color_black"
        android:typeface="serif"
        app:autoSizeMaxTextSize="@dimen/activity_home_page_menu_settings_sound_text_size_max"
        app:autoSizeMinTextSize="@dimen/activity_home_page_menu_settings_sound_text_size_min"
        app:autoSizeTextType="uniform"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_sound"
        app:layout_constraintWidth_percent="0.7" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_compat_on_off_chat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="serif"
        android:textSize="10dp"
        android:paddingEnd="15dp"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_chat"
        app:layout_constraintStart_toEndOf="@+id/text_view_chat"
        app:layout_constraintTop_toTopOf="@+id/text_view_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:showText="true"
        android:textOn="@string/activity_home_page_menu_settings_sound_picker_on_text"
        android:textOff="@string/activity_home_page_menu_settings_sound_picker_off_text"
        app:track="@drawable/custom_track" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_chat"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/color_light_gray"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95"
        android:background="@drawable/border_title_accept_button_avatar"
        android:text="@string/activity_home_page_menu_settings_save_text"
        android:elevation="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/color_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>