<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/avatar_gallery"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_home_page_avatar_gallery_background_color">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_button_gallery"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/activity_home_page_avatar_add_gallery_photo"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        app:autoSizeMinTextSize="26dp"
        app:autoSizeMaxTextSize="28dp"
        app:autoSizeTextType="uniform"
        android:drawableTop="@drawable/ic_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="serif"
        android:gravity="center|top"
        android:background="@drawable/avatar_gallery_shape"
        android:elevation="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>