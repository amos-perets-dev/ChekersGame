<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="100dp"
    android:padding="2dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menu_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/border_shape_button_menu"
        android:elevation="3dp"
        android:gravity="start|center_vertical"
        android:layerType="hardware"
        android:paddingStart="40dp"
        android:textColor="@color/color_white"
        android:typeface="serif"
        app:autoSizeMaxTextSize="@dimen/activity_home_page_menu_buttons_button_name_text_size_max"
        app:autoSizeMinTextSize="@dimen/activity_home_page_menu_buttons_button_name_text_size_min"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SIGNLR PLAER" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu_button_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:elevation="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/menu_button"
        app:layout_constraintEnd_toEndOf="@+id/menu_button"
        app:layout_constraintTop_toTopOf="@+id/menu_button"
        app:layout_constraintWidth_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>