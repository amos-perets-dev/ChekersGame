<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_home_page_avatar_camera_background_color">

    <com.example.chekersgamepro.util.camera.CameraPreview
        android:id="@+id/camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="1"
        android:src="@drawable/ic_pawn_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.chekersgamepro.views.custom.ImageViewShadow
        android:id="@+id/shutter_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_shutter"
        android:elevation="50dp"/>

    <com.example.chekersgamepro.views.custom.ImageViewShadow
        android:id="@+id/refresh_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@+id/shutter_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_refresh"
        android:elevation="50dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/permission_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/activity_home_page_avatar_add_open_camera_permission"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>