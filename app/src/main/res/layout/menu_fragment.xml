<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_home_page_menu_buttons_background">


    <com.example.chekersgamepro.checkers.recycler.CheckersRecyclerView
        android:id="@+id/recycler_view_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.65"
        android:layout_margin="25dp"
        android:layoutAnimation="@anim/layout_animation_menu"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_buttons"
        app:layout_constraintLeft_toLeftOf="@+id/recycler_view_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/color_white"
        app:borderWidth="0dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_settings"
        app:fabCustomSize="50dp"
        android:elevation="6dp"
        app:elevation="6dp"
        app:rippleColor="@color/color_light_gray"
        app:fabSize="normal"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_buttons"
        app:layout_constraintLeft_toRightOf="@+id/fab_settings"
        app:layout_constraintRight_toLeftOf="@+id/fab_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/color_white"
        android:src="@drawable/ic_share"
        app:borderWidth="0dp"
        app:fabCustomSize="50dp"
        android:elevation="6dp"
        app:elevation="6dp"
        app:rippleColor="@color/color_light_gray"
        app:fabSize="normal"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_logout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_buttons"
        app:layout_constraintRight_toRightOf="@+id/recycler_view_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/color_white"
        app:borderWidth="0dp"
        android:src="@drawable/ic_logout"
        android:layout_marginRight="15dp"
        app:fabCustomSize="50dp"
        android:elevation="6dp"
        app:elevation="6dp"
        app:rippleColor="@color/color_light_gray"
        app:fabSize="normal"/>

</androidx.constraintlayout.widget.ConstraintLayout>